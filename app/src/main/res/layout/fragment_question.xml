<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#0099CC"
>

    <TextView
        android:text="#0"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/quesno_tv"
        android:typeface="sans"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="3dp"
        android:background="@drawable/number"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:textSize="20dp"
        android:textIsSelectable="false" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#FFFFFF"

        android:layout_weight="3"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@+string/default_ques"
        android:id="@+id/ques_tv"

        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:textSize="20dp" />

    </ScrollView>

    <LinearLayout



        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:gravity="end">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@+string/default_ans"
            android:id="@+id/a_tv"
            android:layout_gravity="center_horizontal"
            android:onClick="clickedA"
            android:clickable="true"
            android:background="@drawable/button"
            android:layout_margin="10dp"

            android:layout_weight=".3"
            android:textSize="15dp"
            android:textStyle="bold"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@+string/default_ans"
            android:id="@+id/b_tv"
            android:layout_gravity="center_horizontal"
            android:onClick="clickedB"
            android:clickable="true"
            android:background="@drawable/button"
            android:layout_margin="10dp"
            android:layout_weight=".3"
            android:textSize="15dp"
            android:textStyle="bold"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@+string/default_ans"
            android:id="@+id/c_tv"
            android:layout_gravity="center_horizontal"
            android:onClick="clickedC"
            android:clickable="true"
            android:layout_margin="10dp"
            android:layout_weight=".3"
            android:textSize="15dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:background="@drawable/button" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@+string/default_ans"
            android:id="@+id/d_tv"
            android:layout_gravity="center_horizontal"
            android:onClick="clickedD"
            android:clickable="true"
            android:background="@drawable/button"
            android:layout_margin="10dp"
            android:layout_weight=".3"
            android:textSize="15dp"
            android:textStyle="bold"
            android:autoText="false"
            android:gravity="center_vertical" />


    </LinearLayout>


</LinearLayout>




