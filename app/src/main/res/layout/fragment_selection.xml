<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#0099CC"
    tools:context="quizapp.example.com.quizapp.SelectionActivity$PlaceholderFragment"
    >


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/selecinfo_btn"
        android:onClick="showSelectionInfo"
        android:background="@drawable/question_mark"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/scrollView"
        android:layout_marginTop="50dp"
        android:fillViewport="false"
        android:layout_above="@+id/cr">

    <LinearLayout



        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"


        android:layout_below="@+id/imageView"
        android:id="@+id/sl">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Subject1_btn"
            android:background="@drawable/trial_subject"
            android:onClick="startQuestion"
            android:layout_below="@+id/imageView"
            android:layout_alignLeft="@+id/w"
            android:layout_alignStart="@+id/w"
            android:layout_gravity="center_horizontal" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Subject2_btn"
            android:background="@drawable/coming_soon"
            android:onClick="commingSoon"
            android:layout_below="@+id/w"
            android:layout_alignLeft="@+id/w"
            android:layout_alignStart="@+id/w"
            android:layout_marginTop="35dp"
            android:contentDescription="s"
            android:layout_gravity="center_horizontal" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Subject3_btn"
            android:background="@drawable/coming_soon"
            android:layout_below="@+id/w"
            android:layout_alignLeft="@+id/Subject5_btn"
            android:layout_alignStart="@+id/Subject5_btn"
            android:layout_marginTop="35dp"
            android:layout_gravity="center_horizontal"
            android:focusableInTouchMode="false"
            android:onClick="commingSoon" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Subject4_btn"
            android:background="@drawable/coming_soon"
            android:onClick="commingSoon"
            android:layout_below="@+id/w"
            android:layout_alignLeft="@+id/w"
            android:layout_alignStart="@+id/w"
            android:layout_marginTop="35dp"
            android:layout_gravity="center_horizontal" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Subject5_btn"
            android:background="@drawable/coming_soon"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/w"
            android:layout_centerHorizontal="true"
            android:onClick="commingSoon"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
    </ScrollView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+string/copyright"
        android:id="@+id/cr"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_horizontal|bottom"
        android:gravity="end"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
